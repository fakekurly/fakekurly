<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kurly.mapper.ProductMapper">

<!-- 상품상세정보 보기 -->
<select id="productdetail" parameterType="int" resultType="com.kurly.dto.ProductVO">
	select pcode, pname, company, price, stock, description, postscript from tbl_product where pcode = #{pcode}
</select>


</mapper>